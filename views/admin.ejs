<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %> 

<body>

    <%- include('partials/header') %> 
    
    <main class="container">

        <section class="table-responsive">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Foto</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Descripci√≥n</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>

                    <% products.forEach((product, index) => { %> 

                        <tr>
                            <th scope="row"><%= index + 1 %> </th>
                            <th><img class="img-fluid" src="/images/products/<%= product.photos[0] %> " alt=""></th>
                            <th><%= product.name %> </th>
                            <th><%= product.category %> </th>
                            <th><%= product.description %> </th>
                            <th class="d-flex justify-content-around">
                                <div>
                                    <a class="btn btn-sm btn-success" href="/products/edit/<%= product.id %>" style="width: 35px;"> <i class="fas fa-edit" ></i> </a>
                                </div>
                                <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-sm btn-danger" style="width: 35px;" type="submit"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </th>
                        </tr>

                    <% }) %> 

                </tbody>
            </table>

            

         
            
        </section>


    </main>

    <%- include('partials/footer') %> 

</body>
</html>