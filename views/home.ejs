<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %> 

<body>
    
    <%- include('partials/header') %> 

    <main>
        <section class="banner">
            <img src="/images/img-banner.jpg" alt="">
        </section>
        <section class="products">

            <% products.forEach(product => { %> 

            <article class="product">
                <div class="image-container">
                    <img src="/images/products/<%= product.photos[0] %> " alt="" class="photo">

                    <% if(product.category == "Oferta") { %> 
                    <img src="/images/img-descuento.png" alt="" class="label">
                    <% } else if(product.category == "nuevo") { %> 
                        <img src="/images/img-nuevo.png" alt="" class="label">
                        <% } else { %>
                            <img src="/images/img-gratis.png" alt="" class="label">
                            <% } %>  

                    <a href="" class="zoom">ampliar foto</a>
                </div>
                <h4><%= product.name %> </h4>
                <p class="description">
                    <%= product.description %> 
                </p>
                <a href="/products/detail/<%= product.id %> " class="more">ver m√°s</a>
            </article>

            <% }) %> 
            
        </section>
    </main>
   

    <%- include('partials/footer') %> 

</body>
</html>