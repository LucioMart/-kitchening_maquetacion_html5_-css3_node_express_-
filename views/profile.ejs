<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %> 

<body>

    <%- include('partials/header') %>

    <main class="container">
        <div class="row">
            <div class="col-12 col-md-8 mx-auto">
                <div class="card">
                    <div class="card-header">Profile</div>
                    <div class="card-body"> 
                        <form action="" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="exampleInputName" class="form-label">Nombre</label>
                                <input type="text" id="exampleInputName" name="name" value="" class="form-control">
                                <span></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputEmail" class="form-label">Email</label>
                                <input type="email" id="exampleInputEmail" name="email" value="" class="form-control">
                                <span></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword0" class="form-label">Contraseña</label>
                                <input type="password" id="exampleInputPassword0" name="passOld" class="form-control">
                                <span></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Nueva Contraseña</label>
                                <input type="password" id="exampleInputPassword1" name="pass" class="form-control">
                                <span></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword2" class="form-label">Confirmar Contraseña</label>
                                <input type="password" id="exampleInputPassword2" name="pass2" class="form-control">
                                <span></span>
                            </div>
                            <div class="mb-3">
                                <label for="inputAvatar" class="form-label">Subir imagen de perfil</label>
                                <input type="file" id="inputAvatar" name="avatar" class="form-control" hidden>
                                <span></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %> 
    
</body>
</html>