<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head') %> 

<body>

    <%- include('partials/header') %> 
    
    <main class="container">

        <section class="row">

           <article class="col-12 col-md-8 mx-auto mb-5">
                <div class="image-container">
                    <img src="/images/<%= product.photo %> " alt="" class="photo">

                    <% if(product.category == "sale") { %> 
                    <img src="/images/img-descuento.png" alt="" class="label">
                    <% } else if(product.category == "new") { %> 
                        <img src="/images/img-nuevo.png" alt="" class="label">
                        <% } else { %>
                            <img src="/images/img-gratis.png" alt="" class="label">
                            <% } %>  

                    <a href="" class="zoom">ampliar foto</a>
                </div>
                <h4><%= product.name %> </h4>
                <p class="description">
                    <%= product.description %> 
                </p>
              
            </article>

         
            
        </section>


    </main>

    <%- include('partials/footer') %> 

</body>
</html>